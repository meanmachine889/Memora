datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Course {
  id          String      @id @default(uuid()) 
  title       String
  instructors String[] 
  image       String 
  images      String[] 
  nfts        CourseNFT[] 
  address     String      @default("") 
}

model CourseNFT {
  nftId    String @id 
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId String 
  tokenURI String 
}
